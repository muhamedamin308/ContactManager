<!-- res/values-night/styles.xml -->
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary</item>
        <item name="colorAccent">@color/dark_secondary</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <!-- Light theme -->
    <style name="Theme.MyApp.Light" parent="AppTheme">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryDark">@color/light_primary</item>
        <item name="colorAccent">@color/light_secondary</item>
        <item name="android:windowBackground">@color/light_background</item>
    </style>

    <!-- Dark theme -->
    <style name="Theme.MyApp.Dark" parent="AppTheme">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary</item>
        <item name="colorAccent">@color/dark_secondary</item>
        <item name="android:windowBackground">@color/dark_background</item>
    </style>

    <!-- Primary TextView style -->
    <style name="PrimaryItemsStyle">
        <item name="android:textColor">@color/dark_font</item>
        <item name="android:tint">@color/dark_font</item>
        <item name="android:fontFamily">@font/abeezee</item>
    </style>

    <!-- Secondary TextView style -->
    <style name="SecondaryItemsStyle">
        <item name="android:textColor">@color/dark_secondary_font</item>
        <item name="android:tint">@color/dark_secondary_font</item>
        <item name="android:fontFamily">@font/abeezee</item>
    </style>

    <style name="PrimaryCardStyle">
        <item name="android:background">@color/dark_background</item>
    </style>

    <style name="ActivateCircleStateStyle">
        <item name="android:background">@color/dark_background</item>
        <item name="android:tint">@color/dark_primary</item>
    </style>

    <style name="DisableCircleStateStyle">
        <item name="android:background">@color/dark_background</item>
        <item name="android:tint">@color/dark_secondary_darker</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@color/dark_secondary</item>
    </style>

</resources>
