<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contact_layout"
        style="@style/PrimaryCardStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/contact_image_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_account_circle_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/light_primary" />

        <TextView
            android:id="@+id/contact_name"
            style="@style/PrimaryItemsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Muhamed Amin"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/contact_image_profile"
            app:layout_constraintTop_toTopOf="@id/contact_image_profile" />

        <TextView
            android:id="@+id/contact_phone_number"
            style="@style/SecondaryItemsStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2010 2766 0252"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/contact_name"
            app:layout_constraintTop_toBottomOf="@+id/contact_name" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>